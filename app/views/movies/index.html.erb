<h1>Listing movies</h1>

<table>
  <tr>
    <th></th>
    <th>Movie</th>
    <th>Release date</th>
    <th>Plot</th>
    <th>Genre</th>
    <th>Rating</th>
    <th>Review score</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= image_tag movie.movie_image.thumb.url %></td>
    <td><%= link_to movie.name, movie %></td>
    <td><%= movie.release_date %></td>
    <td><%= movie.plot[0..50] %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.rating %></td>
    <td><%= movie.review_score %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path %>
