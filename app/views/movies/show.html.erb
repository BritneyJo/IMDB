<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @movie.name %>
</p>

 <p><%= image_tag @movie.movie_image.detail.url %></p>

<p>
  <b>Release date:</b>
  <%= @movie.release_date %>
</p>

<p>
  <b>Plot:</b>
  <%= @movie.plot %>
</p>

<p>
  <b>Actors:</b>
    <%= @movie.players.map(&:name).to_sentence %>
</p>

<p>
  <b>Genre:</b>
  <%= @movie.genre %>
</p>

<p>
  <b>Rating:</b>
  <%= @movie.rating %>
</p>

<p>
  <b>Review score:</b>
  <%= @movie.review_score %>
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Remove', @movie, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', movies_path %>

